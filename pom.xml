            </dependency>
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-it-assertj</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-it-cucumber</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- sync -->
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-sync</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-sync-it</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- operator -->
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-operator</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-operator-it</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- operator :: camel -->
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-operator-camel</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-operator-camel-it</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- operator :: debezium -->
            <dependency>
                <groupId>org.bf2</groupId>
                <artifactId>cos-fleetshard-operator-debezium</artifactId>
